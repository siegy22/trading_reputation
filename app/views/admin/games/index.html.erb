<% content_for(:header) do %>
  <h1>Games <small><%= @games.count %> in total</small></h1>
<% end %>

<% content_for(:header_actions) do %>
  <%= link_to fa_icon("plus"), new_admin_game_path, class: "btn btn-default btn-lg", title: "Add new game" %>
<% end %>

<table class="table table-striped table-hover games">
  <thead>
    <tr>
      <th>#</th>
      <th><%= Game.human_attribute_name :image %></th>
      <th><%= Game.human_attribute_name :name %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
	<td><%= game.id %></td>
	<td><%= image_tag game.image.url, class: "img-game" %></td>
	<td><%= game.name %></td>
	<td>
	  <%= link_to fa_icon("pencil"), edit_admin_game_path(game), class: "btn btn-default", title: "Edit #{game.name}" %>
	  <%= link_to fa_icon("trash"), admin_game_path(game), class: "btn btn-danger", data: { method: :delete, confirm: "Are you sure?" }, title: "Delete #{game.name}" %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>
