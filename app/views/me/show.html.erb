<% content_for :header do %>
  <h1><%= @me.name %> <small>/u/<%= @me.reddit_name %></small></h1>
<% end %>

<% content_for :header_actions do %>
  <%= link_to fa_icon("pencil"), edit_me_path, class: "btn btn-primary btn-lg", title: "Edit profile", id: "edit-me" %>
<% end %>

<div class="panel panel-default pull-right">
  <div class="panel-heading">Linked accounts</div>
  <div class="panel-body">
    <%= render 'linked_accounts' %>
  </div>
</div>
